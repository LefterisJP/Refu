@DATA_STRUCT* rfList_Create()
{
    @DATA_STRUCT* ret;
    //allocate the list
    RF_MALLOC(ret, sizeof(@DATA_STRUCT), NULL);
    if(rfList_Init(ret) == false)
    {
        free(ret);
        ret = NULL;
    }
    return ret;
}


bool rfList_Init(@DATA_STRUCT* l)
{
    //allocate the first node
    RF_MALLOC(l->start, sizeof(@NODE), false);
    l->start->data = 0;
    l->start->next = 0;
    l->end = l->start;
    return true;
}



bool rfList_Copy_IN(@DATA_STRUCT* dst,
                    @DATA_STRUCT* src)
{
    @NODE* n = src->start->next, *c, *pr = 0;

    //allocate first node
    RF_MALLOC(c, sizeof(@NODE), false);
    c->data = 0;
    c->next = 0;
    dst->start = c;
    pr = c;
    while(n != 0)
    {
        //allocate a node
        RF_MALLOC(c, sizeof(@NODE), false);
        //copy its data
        c->data = n->data;
        c->next = 0;
        //connect it to the previous one
        pr->next = c;
        pr = c;
        //keep reading the src
        n = n->next;
    }
    dst->end = c;
    return true;
}

@DATA_STRUCT* rfList_Copy_OUT(@DATA_STRUCT* src)
{
    @DATA_STRUCT* dst;
    RF_MALLOC(dst, sizeof(@DATA_STRUCT), NULL);
    if(rfList_Copy_IN(dst, src) == false)
    {
        free(dst);
        dst = NULL;
    }
    return dst;
}

void rfList_Deinit(@DATA_STRUCT* a)
{
    @NODE* n = a->start->next, *p;
    while(n != 0)
    {
        p = n;
        n = n->next;
        free(p);
    }
    //finally free start node
    free(a->start);
}

void rfList_Destroy(@DATA_STRUCT* a)
{
    rfList_Deinit(a);
    free(a);
}

bool rfList_Add(@DATA_STRUCT* a, @TYPEPTR e)
{
    @NODE* n;
    char ret = true;
    RF_MALLOC_JMP(n, sizeof(@NODE), ret = false, cleanup);
    n->next = 0;

    //add the data to the node
    n->data = e;

    //connect the new node to the linked list
    a->end->next = n;
    a->end = n;

#ifdef RF_OPTION_SAFE_MEMORY_ALLOCATION
  cleanup:
#endif
    return ret;
}

bool rfList_Delete(@DATA_STRUCT* a, @TYPEPTR e)
{
    @NODE* n = a->start->next;
    @NODE* pr = a->start;
    while(n != 0)
    {
        if(e == n->data)
        {
            if(n == a->end)
            {//if this is the last node
                pr->next = 0;
                a->end = pr;
                free(n);
                return true;
            }
            //else it's somewhere in between
            pr->next = n->next;
            free(n);
            return true;
        }
        pr = n;
        n = n->next;
    }
    return false;
}

bool rfList_Has(@DATA_STRUCT* a, @TYPEPTR e)
{
    @NODE* n = a->start->next;
    while(n != 0)
    {
        if(e == n->data)
        {
            return true;
        }
        n = n->next;
    }while(n != 0);
    return false;
}
